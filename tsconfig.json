  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": ["./src/types/types.global.d.ts"]
  },
  "include": ["./src"]
}
