{
  "name": "mongoit",
  "version": "0.0.0",
  "description": "A robust MongoDB Object Data Modeling library for Node.js, providing a simple and convenient interface for performing CRUD operations, managing schema, validation, and sanitization.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs",
    "types": "./dist/index.d.ts",
    "default": "./dist/index.js"
  },
  "files": [
    "./dist",
    "./package.json"
  ],
  "scripts": {
    "lint": "eslint . --ext .js,.ts",
    "prebuild": "npm run lint && npx rimraf ./dist",
    "build": "rollup -c rollup.config.js",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mustib/mongoit"
  },
  "keywords": [
    "nodejs",
    "mongodb",
    "driver",
    "document",
    "model",
    "odb",
    "crud",
    "schema",
    "validation",
    "sanitization",
    "database",
    "nosql",
    "query",
    "db"
  ],
  "author": "Muhammad Mustafa",
  "license": "MIT",
  "dependencies": {
    "@mustib/utils": "^1.0.1",
    "file-type": "^18.5.0",
    "rollup": "^4.24.1"
  },
  "peerDependencies": {
    "mongodb": ">= 5.3.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "2.8.4",
    "rimraf": "^4.4.0",
    "rollup-plugin-dts": "^6.1.1",
    "tsx": "^4.11.0",
    "typescript": "^5.0.2"
  }
}
